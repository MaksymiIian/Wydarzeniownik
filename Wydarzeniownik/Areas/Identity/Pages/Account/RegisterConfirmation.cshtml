@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Potwierdź swój adres mailowy</a>
</p>
    }
    else
    {
<p>
        Sprawdź swoją skrzynkę pocztową w celu potwierdzenia adresu mailowego.
</p>
    }
}

